#!/bin/sh

echo Downloading Qt
INSTALLER=qt-opensource-linux-x86-5.5.1.run
ENVFILE=qt-5.5.1.env
wget -c https://download.qt.io/archive/qt/5.5/5.5.1/qt-opensource-linux-x86-5.5.1.run
echo Installing Qt
extract-qt-installer $INSTALLER $PWD/Qt

echo Create $ENVFILE
cat << EOF > $ENVFILE
export PATH=$PWD/Qt/5.5/gcc_x86/bin:$PATH
EOF
